# FastAPI backend environment
APP_NAME=OrgManagerAPI
APP_ENV=development
DEBUG=true
PORT=8000

# CORS allowed origins (comma separated)
CORS_ORIGINS=http://localhost:5173

# Database connection for local Postgres (Supabase-compatible schema)
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/org_manager

# Supabase settings (optional). Leave unset for demo token mode.
# SUPABASE_URL=
# SUPABASE_ANON_KEY=
# SUPABASE_JWT_SECRET=

# Optional: log level
LOG_LEVEL=INFO
