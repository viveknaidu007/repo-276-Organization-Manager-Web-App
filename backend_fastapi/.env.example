# FastAPI backend environment
APP_NAME=OrgManagerAPI
APP_ENV=development
DEBUG=true
PORT=8000

# CORS allowed origins (comma separated)
CORS_ORIGINS=http://localhost:5173

# Database connection for local Postgres (Supabase-compatible schema)
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/org_manager

# Supabase settings (used to validate JWT from frontend)
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# Optional: log level
LOG_LEVEL=INFO
